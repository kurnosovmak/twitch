{% extends 'main.html.twig' %}

{% block title %}{{ trailer.id }} iTunes Movie trailers{% endblock %}

{% block content %}
    <style>
        .title-link {
            color: #212529;
        }

        .title-link:hover {
            color: #212529;
            opacity: 0.7;
            cursor: pointer;
            text-decoration: none;
        }

        .scale {
            transition: 0.5s; /* Время эффекта */
        }

        .scale:hover {
            transform: scale(1.05); /* Увеличиваем масштаб */
        }
    </style>
    <div class="container">

         <h1 class="mt-5 mb-4"><a href="/"><span><-</span></a> </h1>
        <div class="container" style="padding-top: 100px;">
            <div class="row">

                <div class="col-md-4">

                    <div class="card mb-4 box-shadow" style="margin: auto;">
                        <img class="card-img-top" src="{{ trailer.image }}"
                             style="height: 225px; width: 100%; display: block;object-fit: cover;">
                        <div class="card-body">
                            <h2>{{ trailer.title }}</h2>
                            <p class="card-text">{{ trailer.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ trailer.link }}" target="_blank" rel="noopener noreferrer">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Источник
                                        </button>
                                    </a>
                                    {# <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> #}
                                </div>
                                {# <small class="text-muted">9 mins</small> #}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}